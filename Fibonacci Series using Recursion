#include<stdio.h>
int main()
{
int n,i = 0;
    printf("Enter the number of terms in the Fibonacci series: ");
    scanf("%d", &n);

    printf("Fibonacci Series: ");
    while(i<n)
    {
        printf("%d ",fib(i));
        i++;
    }
    printf("\n");

    return 0;
    }
    int fib(int n)
    {

        if(n==0)

            return 0;

        else if(n==1)

            return 1;

        else

            return fib(n-1) + fib(n-2);

    }


